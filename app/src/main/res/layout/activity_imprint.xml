<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="de.p72b.mocklation.imprint.ImprintActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="de.p72b.mocklation.main.MainActivity"
        tools:showIn="@layout/activity_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/guideline_dialog_content_padding"
            android:orientation="vertical">

            <TextView
                style="@style/TitleH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/imprint_producer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imprint_producer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/imprint_about_text" />

            <TextView
                android:id="@+id/imprint_github_project_repository"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/imprint_github_project_repository" />

            <TextView
                style="@style/TitleH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imprint_privacy_policy_title" />

            <TextView
                android:id="@+id/imprint_privacy_policy_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/privacy_policy_url" />

            <TextView
                style="@style/TitleH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imprint_contact_title" />

            <TextView
                android:id="@+id/imprint_producer_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:text="@string/imprint_producer_contact_name" />

            <TextView
                android:id="@+id/imprint_producer_contact_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:text="@string/imprint_producer_contact_email" />

            <TextView
                android:id="@+id/imprint_producer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:text="@string/imprint_producer_address" />

            <TextView
                style="@style/TitleH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imprint_dependencies_title" />

            <LinearLayout
                android:id="@+id/wrapper_dependencies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/eye"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                style="@style/TitleH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imprint_license" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apache_2_license"/>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>